{
  "display_name": "Cyber Glitch",
  "description": "前卫的程序员个人博客主题，大胆冲突配色，丰富的动画，精致的图标，整体优雅美观。",
  "version": "1.0.0",
  "author": "GitHub Copilot",
  "license": "MIT",
  "min_noteblog_version": "1.0.0",
  "is_system": false,
  "supports_widgets": true,
  "supports_menus": true,
  "supports_customizer": true,
  "config_schema": {
    "primary_color": {
      "type": "color",
      "label": "主色调 (Neon Green)",
      "default": "#39ff14"
    },
    "secondary_color": {
      "type": "color",
      "label": "次色调 (Hot Pink)",
      "default": "#ff00ff"
    },
    "background_color": {
      "type": "color",
      "label": "背景色 (Deep Dark)",
      "default": "#0a0a0a"
    },
    "text_color": {
      "type": "color",
      "label": "文字颜色",
      "default": "#e0e0e0"
    },
    "hero_title": {
      "type": "text",
      "label": "首页主标题",
      "default": "WELCOME TO THE VOID"
    },
    "hero_subtitle": {
      "type": "textarea",
      "label": "首页副标题",
      "default": "Code is poetry. Bugs are features. Welcome to my digital garden."
    },
    "hero_cta_label": {
      "type": "text",
      "label": "首页按钮文字",
      "default": "ENTER THE GRID"
    },
    "hero_cta_link": {
      "type": "text",
      "label": "首页按钮链接",
      "default": "/archives"
    },
    "about_headline": {
      "type": "text",
      "label": "关于页面主标题",
      "default": "About The Operator"
    },
    "about_tagline": {
      "type": "textarea",
      "label": "关于页面副标题",
      "default": "A curious mind wiring code, stories, and neon dreams."
    },
    "about_mission": {
      "type": "textarea",
      "label": "关于页面简介",
      "default": "I build delightful experiences that live between design and engineering. Every release is a new glitch in the matrix."
    },
    "about_contact_email": {
      "type": "text",
      "label": "联系邮箱",
      "default": "hello@example.com"
    },
    "about_page_slug": {
      "type": "text",
      "label": "关于页面别名",
      "default": "about"
    },
    "glitch_intensity": {
      "type": "select",
      "label": "故障强度",
      "options": [
        {"label": "低", "value": "low"},
        {"label": "中", "value": "medium"},
        {"label": "高", "value": "high"}
      ],
      "default": "medium"
    }
  }
}
